{
  "name": "pennelite-backend",
  "version": "1.0.0",
  "scripts": {
    "build": "buildlite default build",
    "dev": "buildlite default dev"
  },
  "buildlite": {
    "default": {
      "context": "src",
      "outputPath": "dist",
      "outputName": "server.js",
      "babel": true,
      "target": "node",
      "externals": [
        "nodeModules"
      ]
    },
    "dev": {
      "watch": true,
      "entry": "./setup/dev.index.js"
    },
    "build": {
      "entry": "./setup/prod.index.js"
    }
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "http": "^0.0.0",
    "mongodb": "^3.1.10",
    "mongoose": "^5.7.5",
    "nodemon": "^1.18.9",
    "ramda": "^0.26.1"
  }
}
